@model MvcStok.Models.Entity.Tbl_Urunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="50" placeholder="Ürün Adı" />
    </div>
    <div>
        <label>Ürün Marka</label>
        <input type="text" class="form-control" name="MARKA" required="" maxlength="30" placeholder="Marka Adı"/>
    </div>
    <div>
        <label>Ürün Kategori</label>
        @Html.DropDownListFor(m=>m.Tbl_Kategoriler.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" required="" />
    </div>
    <div>
        <label>Ürün Stok</label>
        <input type="text" class="form-control" name="STOK" required="" />
    </div>
    <div style="margin-top: 15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

